<% include partials/header %>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Add Employee</div>
            <div class="panel-body">
                <form method="POST" action="/add-confirm">
                    <div class="form-group">
                        <label for="name1">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Employee Name">
                    </div>
                    <div class="form-group">
                        <label for="salary1">Salary</label>
                        <input type="number" class="form-control" name="salary" placeholder="Employee Salary">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
