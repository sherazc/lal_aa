<% include partials/header %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <table width="100%">
                    <tr>
                        <td>Employees</td>
                        <td align="right"><a href="/add" class="btn btn-primary">                            
                            Add Employee
                        </a></td>
                    </tr>
                    
                </table>                
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Salary</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            <%
                            employees.forEach((employee) => {
                                %>
                            <tr>
                                <td><%= employee.id%></td>
                                <td><%= employee.name%></td>
                                <td><%= employee.salary%></td>
                                <td>
                                    <a href="/delete/<%= employee.id%>" class="btn btn-primary">
                                        <span class="glyphicon glyphicon-remove-circle"></span>
                                        Delete
                                    </a>
                                </td>
                                <td>
                                     <a href="/update/<%= employee.id%>" class="btn btn-primary">
                                        update
                                     </a>
                                </td>
                            </tr>    
                                <%
                            });
                            %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>   
<% include partials/footer %>