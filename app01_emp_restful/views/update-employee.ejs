<% include partials/header %>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">update Employee</div>
            <div class="panel-body">
                <form method="POST" action="/update">
                    <%
                    employees.forEach((employee) => {
                        %>
                    <div class="form-group">
                            <label for="id1">id</label>
                            <input type="number" class="form-control" name="eid" placeholder="Employee id" value="<%= employee.id%>">
                        </div>
                    <div class="form-group">
                        <label for="name1">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Employee Name" value="<%= employee.name%>">
                    </div>
                    <div class="form-group">
                        <label for="salary1">Salary</label>
                        <input type="number" class="form-control" name="salary" placeholder="Employee Salary" value="<%= employee.salary%>">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
               <%
                });
                %>
                </form>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>